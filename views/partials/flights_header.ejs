<div style="background-color:rgb(0, 36, 114); padding-bottom: 0.5em; border: grey 0.2em solid;">
    <h1 style="color: white">
        Flight
    </h1>
</div>


<!-- Show selections based on previous page-->
<div style="background-color:#e6eeff; margin: 0em; border: lightgray 0.2em solid;"
    class="row justify-content-md-center">
    <div class="col-sm-5">
        <h3 style="font-weight: bold">Departing <%=startDate.toDateString().toUpperCase()%></h3>
        <div style="width: inherit; display: table;">
            <div style="display: table-cell;">

                <h4><%=from%></h4>
            </div>
            <div style="padding-left: 1em; padding-right: 5em; display: table-cell;">
                <img src="https://img.icons8.com/metro/26/000000/airplane-mode-on.png"
                    style="vertical-align: text-top;">

            </div>

            <div style="display: table-cell;">
                <h4><%=to%></h4>
            </div>
        </div>
    </div>
    <div class="col-sm-2"></div>
    <%if(flightType != "oneway") {%>
    <!--next flight-->
    <div class="col-sm-5">
        <%if(flightType == "return") {%>

        <h3 style="font-weight: bold">Returning <%=returnDate.toDateString().toUpperCase()%></h3>
        <%}%>
        <div style="width: inherit; display: table;">
            <div>

                <h4><%=to%></h4>
    </div>
    <div style="display: table-cell; padding-left: 1em; padding-right: 5em;">
        <img src="https://img.icons8.com/metro/26/000000/airplane-mode-on.png" style="vertical-align: text-top;">

    </div>

    <div>
        <h4><%=from%></h4>
    </div>
</div>
</div>
<%}%>
    </div>