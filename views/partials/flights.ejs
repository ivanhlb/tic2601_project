<% if(flight == "depart"){ %>
<h2 style="font-weight: bold">
    Departing Flight
</h2>
<%}%>
    <% if(flight == "return"){ %>
<h2 style="font-weight: bold">
    Returning Flight
</h2>
<%}%>
<br>
<table>
    <thead>
        <tr>
                <% if(flight == "depart"){ %>
<th><%=from%> to <%=to%></th>
<%}%>
                    
            <% if(flight == "return"){ %>
<th><%=to%> to <%=from%></th>
<%}%>
        </tr>
</thead>
<tbody>
    <!--directory is relative-->
        <% flights.forEach(function(f){ %>
<%- include('flightrow', {flightType: flight, flightID: f.id, price: f.price, depart_time: f.depart_time, arrival_time: f.arrival_time}); %>
<% }); %>
</tbody>
</table>