<% if(flight == "depart"){ %>
<h2 style="font-weight: bold">
    Departing Flight
</h2>
<%}%>
    <% if(flight == "return"){ %>
<h2 style="font-weight: bold">
    Returning Flight
</h2>
<%}%>
<br>
<table>
    <thead>
        <tr>
                <% if(flight == "depart"){ %>
<th><%=from%> to <%=to%></th>
<%}%>
                    
            <% if(flight == "return"){ %>
<th><%=to%> to <%=from%></th>
<%}%>
        </tr>
</thead>
<tbody>
    <!--directory is relative-->
        <% flights.forEach(function(f){ %>
<%- include('flightrow', {flightType: flight, flightID: f.FlightID, price: f.BasePrice, depart_time: f.DepartureDatetime, arrival_time: f.ArrivalDatetime, from: from, to: to, route: f.Route, airline: f.AirlineName}); %>
<% }); %>
</tbody>
</table>