<html>

<head>
    <link rel="stylesheet" href="index.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <title>Airline Ticketing System</title>
</head>

<body>
    <%- include('partials/header'); -%>

    <datalist id="countries">
        <% if(countries) { %>
        <% countries.forEach(function(c) { %>
        <option value='<%= c.name %>'><%= c.name %></option>
        <% }); %>
        <% } else { %>
        <option value="Singapore">Singapore</option>
        <option value="China">China</option>
        <option value="Germany">Germany</option>
        <% }; %>
    </datalist>
    <div class="container">
        <h2>Check Account Details</h2>
        <form action="/account" method="POST" style="display: flex;" class="row">
            <div class="col-12" style="padding: 2em 15%; background-color: lightgray;">
                <label for="bookingID">Enter your Flight booking ID</label>
                <br>
                <input style="width: 100%;" type="text" id="bookingID" min="8" max="8" name="bookingID">
            </div>
            <div class="col-12" style="padding-top: 2em;"></div>
            <div class="col-5" style="display: grid;">
                <label for="email">Email Address</label>
                <input type="email" id="email" name="email">
                <div style="padding: 3em;"></div>
                <div style="padding: 3em;"></div>
            </div>
            <div class="col-2">
                <h1 style="text-align: center;">OR</h1>
            </div>
            <div class="col-5" style="display: grid;">
                <label for="firstname">Passenger First Name</label>
                <input type="text" id="firstname" name="firstname">
                <label for="lastname">Passenger Last Name</label>
                <input type="text" id="lastname" name="lastname">
                <br>
                <label for="fromCountries">From:</label>
                <input id="fromCountries" list="countries" name="From" placeholder="Singapore" autocomplete="off">
                <br>
                <label for="toCountries">To:</label>
                <input id="toCountries" list="countries" name="To" placeholder="Osaka" autocomplete="off">
                <br>
            </div>
            <input type="submit">
    </div>
    </form>
    </div>

    </div>
</body>

</html>